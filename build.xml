<?xml version="1.0" encoding="UTF-8"?>

<project name="Odoo Auto Deploy" default="restart-odoo">

    <property file = "build.properties"/>

    <target name="restart-odoo" depends="restart-postgres">
        <exec executable="sudo" failonerror="true">
			<arg value="systemctl"/>
			<arg value="restart"/>
			<arg value="${run.service.odoo}"/>
		</exec>
        <exec executable="systemctl">
			<arg value="status"/>
			<arg value="${run.service.odoo.name}"/>
		</exec>
    </target>

    <target name="restart-postgres">
        <exec executable="sudo" failonerror="true">
			<arg value="systemctl"/>
			<arg value="restart"/>
			<arg value="${run.service.odoo.name}"/>
		</exec>
        <exec executable="systemctl">
			<arg value="status"/>
			<arg value="${run.service.odoo.name}"/>
		</exec>
    </target>


</project>
